<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainOptionActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="129dp"
        android:background="@color/tw__transparent"
        app:srcCompat="@drawable/users"
        tools:ignore="ContentDescription,UnknownId"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <ImageButton
        android:id="@+id/cecPortal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tw__transparent"
        android:contentDescription=""
        app:srcCompat="@drawable/newspaper"
        tools:ignore="ContentDescription"
        android:layout_alignTop="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignBottom="@+id/imageButton9" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tw__transparent"
        app:srcCompat="@drawable/rotation"
        tools:ignore="ContentDescription"
        android:layout_marginStart="68dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tw__transparent"
        app:srcCompat="@drawable/businesscard"
        tools:ignore="ContentDescription"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/imageButton7"
        android:layout_alignStart="@+id/imageButton7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="PORTAL"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updates"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:layout_below="@+id/cecPortal"
        android:layout_alignEnd="@+id/cecPortal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="statistics"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/imageButton9" />


</RelativeLayout>